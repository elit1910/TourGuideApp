<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.tourguideapp.MainActivity">

    <TextView
        android:id="@+id/Helsinki"
        style="@style/CategoryStyle"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="@string/Helsinki"
        android:background="@color/blue"
        android:layout_marginBottom="15sp"/>

    <TextView
        android:id="@+id/Stockholm"
        style="@style/CategoryStyle"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="@string/Stockholm"
        android:background="@color/yellow"
        android:layout_marginBottom="15sp"/>

    <TextView
        android:id="@+id/Copenhagen"
        style="@style/CategoryStyle"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="@string/Copenhagen"
        android:background="@color/red"
        android:layout_marginBottom="15sp"/>

    <TextView
        android:id="@+id/Oslo"
        style="@style/CategoryStyle"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="@string/Oslo"
        android:background="@color/green"/>

</LinearLayout>