<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tourguideapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_navigation_black_24dp"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".HelsinkiActivity"
            android:label="Helsinki"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".StockholmActivity"
            android:label="Stockholm"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".CopenhagenActivity"
            android:label="Copenhagen"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".OsloActivity"
            android:label="Oslo"
            android:parentActivityName=".MainActivity" />
    </application>
    <uses-permission android:name="android.permission.INTERNET" />
</manifest>